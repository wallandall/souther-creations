<div class="container">
  <div class="row">
    <div class="col-md-8">
      <div class="product-image">
        <%= image_tag(@product.image_url, class: "image-fluid img-thumbnail") %>
      </div>
    </div>
    <div class="col-md-4">
      <h2>Category: <%= @product.category.product_category %></h2>
      <div>
        <strong>Name: </strong> <%= @product.name %>
      </div>
      <div>
        <strong>Description: </strong><%= @product.description %>
      </div>

      <div class="margin-top-10">
        <strong>Average Rating: </strong>
        <div class="rated" data-score="<%= @product.average_rating %>"></div>
      </div>

      <div>
        <%= render "new_comment" %>
      </div>
      <div>
        <%= render 'comments' %>
      </div>
    </div>
  </div>
  <div class="product-buttons">
    <% if current_user && current_user.admin %>
      <%= link_to 'Edit', edit_product_path(@product), class: "btn btn-primary"  %>
    <% end %>
    <%= link_to 'Back', products_path, class: "btn btn-success"  %>
  </div>
</div>
