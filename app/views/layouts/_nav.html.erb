<!-- Nav -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top" id="navbar">
  <%= link_to "Southern Creations", root_path, class: "navbar-brand" %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarCollapse">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <%= link_to "Home", root_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "About", simple_pages_about_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Contact", simple_pages_contact_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%#= link_to "Products", products_path, class: "nav-link" %>
        <%= link_to "Products", products_path, class: "nav-link"  %>
      </li>
    </ul>

    <%= form_with(url: products_path, method: 'get', local: true, class: "form-inline my-2 my-lg-0") do |form| %>
      <%= form.text_field :q, id: 'q', value: params[:q], class: "form-control mr-sm-2", placeholder: "Search for" %>
      <%= form.submit 'Search', class: "btn btn-outline-success my-2 my-sm-0" %>
    <% end %>

    <ul class="nav navbar-right navbar-nav margin-left-20">
      <% if user_signed_in? %>
      <li class="nav-item">
        <%= link_to('Logout', destroy_user_session_path, method: :delete, class: " btn btn-warning") %>
      </li>
      <% else %>
      <li class="nav-item">
        <%= link_to('Login', new_user_session_path, class: "btn btn-info") %>
      </li>
      <% end %>
      </li>
    </ul>

  </div>


</nav><!-- End Nav -->
