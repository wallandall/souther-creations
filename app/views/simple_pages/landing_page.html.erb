<div class="container">
  <h2 id="headline">Featured Product</h2>
  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <% @products.each do |product| %>
      <li data-target="#carouselExampleIndicators" data-slide-to="<%= @products.index %>" class="<%= "active" if product == @products.first %>"></li>
    <% end %>
  </ol>

  <div class="carousel-inner">
    <% @products.each do |product| %>
      <div class="carousel-item <%= " active" if product == @products.first %>">
        <%= image_tag(product.image_url, class: "d-block w-100") %>
        <div class="carousel-caption d-none d-md-block">
          <h5><%= product.name %></h5>
          <p><%= product.description%></p>
        </div>
      </div>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
  </div>
</div>
